<odoo>
  <data>
    <!-- explicit list view definition CAMPOS QUE VA A TENER EL FORMULARIO-->

    <record model="ir.ui.view" id="simulacroexamen.list">
      <field name="name">simulacroexamen list</field>
      <field name="model">simulacroexamen.simulacroexamen</field>
      <field name="arch" type="xml">
        <tree>
          <field name="avatar" widget="image" class="oe_avatar"/>
          <field name="value"/>
          <field name="value2"/>
          <field name="prioridad"/>
          <field name="urgente"/>
          <field name="fecha"/>
        </tree>
      </field>
    </record>


    <!-- actions opening views on models ACCION PARA REFRESCAR LA VENTANA-->

    <record model="ir.actions.act_window" id="simulacroexamen.action_window">
      <field name="name">simulacroexamen window</field>
      <field name="res_model">simulacroexamen.simulacroexamen</field>
      <field name="view_mode">tree,form</field>
    </record>


