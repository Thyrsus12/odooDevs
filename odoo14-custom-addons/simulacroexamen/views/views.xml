    <menuitem name="Menu 1" id="simulacroexamen.menu_1" parent="simulacroexamen.menu_root" action="simulacroexamen.action_window"/>
    <menuitem name="Menu 2" id="simulacroexamen.menu_2" parent="simulacroexamen.menu_root"/>
    <menuitem name="Menu 3" id="simulacroexamen.menu_3" parent="simulacroexamen.menu_root" action="simulacroexamen.action_window"/>


